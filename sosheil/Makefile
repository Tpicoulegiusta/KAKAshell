DEFAULT = \033[0;39m
GRAY = \033[0;90m
RED = \033[0;91m
GREEN = \033[0;92m
YELLOW = \033[0;93m
BLUE = \033[0;94m
MAGENTA = \033[0;95m
CYAN = \033[0;96m
WHITE = \033[0;97m

NAME = minishell
LIB_F = libft
LIB = libft.a
GCCFLG = gcc -Wall -Wextra -Werror -I minishell.h
SRCS = minishell.c ft_ministrjoin.c ft_lists.c \
		ft_lexer.c ft_freee.c \
		ft_instant_error.c ft_utils.c \
		ft_redir_checks.c ft_instant_error2.c \
		ft_check_lexer.c ft_parser.c ft_pwd.c \
		ft_cd.c ft_env_to_list.c \

OBJS = $(SRCS:.c=.o)

all: credit $(NAME)

$(NAME): ${OBJS} $(LIB_F)/$(LIB)
	@echo "$(GREEN)Minishell is up to date!${DEFAULT}"
	@$(GCCFLG) $(OBJS) $(LIB_F)/$(LIB) -o $(NAME) -lreadline

$(LIB_F)/$(LIB):
	@make -C $(LIB_F)

clean:
	@rm -rf $(OBJS)
	@echo "${RED}Making Clean ğŸ—‘ï¸${DEFAULT}"

fclean:
	@rm -rf $(OBJS)
	@rm -rf $(NAME)
	@make fclean -C $(LIB_F)
	@echo "${RED}Making Fclean ğŸ—‘ï¸${DEFAULT}"

re: fclean all

